@model AboutVM
<main class="main">
	<!-- promo primary start-->
	<section class="promo-primary">
		<div class="overlay"></div>
		<picture>
			<source srcset="~/img/@Model.Abouts.Image" media="(min-width: 992px)" /><img class="img-bg" src="~/img/@Model.Abouts.Image" alt="img" />
		</picture>
		<div class="container">
			<div class="row">
				<div class="col-12">
					<div class="align-container">
						<div class="align-item">
							<span>KONAR UNİFORM</span>
							<h1 class="title">Haqqımızda</h1>
						</div>
					</div>
				</div>
			</div>
		</div>
	</section>
	<!-- promo primary end-->
	<!-- about welcome start-->
	<section class="section about-welcome no-padding-bottom">
		<div class="container">
			<div class="row align-items-center">
				<div class="col-xl-4 col-lg-5">
					<div class="title-block">
						<span>About</span>
						<h2 class="title">@Model.Abouts.WelcomeText</h2>

					</div>
				</div>
				<div class="col-xl-7 offset-xl-1 col-lg-6 offset-lg-1">
					<div class="description">
						<h3 class="title"> @Model.Abouts.Title</h3>
						<p>@Model.Abouts.SubTitle</p>
						
					</div>
				</div>
			</div>
		</div>
	</section>
	<!-- about welcome end-->
	<!-- brands start-->
	<section class="section brands no-padding-bottom">
		<div class="container">
			<div class="row">
				<div class="col-12">
					<!-- brands slider start-->
					<div class="brands-holder">
						<div class="brands-slider">
							@foreach (Brand item in Model.Brands)
							{
								<!-- item start-->
								<div class="slider-item"><img src="~/img/@item.Image" alt="brand" /></div>
								<!-- item end-->
							}
							
						</div>
						<div class="brands-dots"></div>
					</div>
					<!-- brands slider end-->
				</div>
			</div>
		</div>
	</section>
	<!-- brands end-->
	<!-- text section start-->
	<section class="section text-section">
		<div class="container">
			<div class="row">
				<div class="col-12">
					<h3 class="title">. Gec ola bilər</h3>
					<p class="subtitle">Təhlükəsizli sabaha saxlama! Nöqtədən sonra artıq gecdir.</p>
				</div>
			</div>
		</div>
	</section>
	<!-- text section end-->
	<!-- video section start-->
	<section class="section video-section no-padding-top no-padding-bottom">
		<div class="container">
			<div class="row">
				<div class="col-12">
					<div class="img-holder">
						<div class="overlay"></div>
						<picture>
							<source srcset="~/img/Test.mp4" type="video/mp4" media="(min-width: 992px)">
							<video class="img-bg" controls>
								<source src="~/img/Test.mp4" type="video/mp4">
							</video>
						</picture>
						<a class="fancy-video" href="https://www.youtube.com/watch?v=_sI_Ps7JSEk">
							<i class="fa fa-play" aria-hidden="aria-hidden"></i>
						</a>
						<span class="text">Video Təqdimat</span>
					</div>
				</div>
			</div>
		</div>
	</section>

	<!-- video section start-->
	<!-- statistics start-->
	<section class="section statistics">
		<div class="container">
			<div class="row">
				<div class="col-12">
					<div class="heading primary-heading">
						<h3 class="title">STATİSTİKA</h3>
						<h5 class="subtitle"><span>Konardan</span> <span>istifadə edir</span></h5>
					</div>
				</div>
			</div>
		</div>
		<div class="counter-block counter--text-lower">
			<div class="container">
				<div class="row no-gutters counter-holder offset-margin">
					<div class="col-sm-4">
						<!-- statistics item start-->
						<div class="statistics-item"><span class="counter">@Model.Statistics?.Company</span><span class="description">ŞİRKƏT</span></div>
						<!-- statistics item end-->
					</div>
					<div class="col-sm-4">
						<!-- statistics item start-->
						<div class="statistics-item"><span class="counter">@Model?.Statistics?.Employee</span><span class="description">İŞÇİ</span></div>
						<!-- statistics item end-->
					</div>
					<div class="col-sm-4">
						<!-- statistics item start-->
						<div class="statistics-item"><span class="counter">@Model?.Statistics?.Entrepreneur</span><span class="description">SAHİBKAR</span></div>
						<!-- statistics item end-->
					</div>
				</div>
			</div>
		</div>
	</section>
	<!-- statistics end-->
	<!-- team start-->
	<section class="section team">
		<div class="container">
			<div class="row">
				<div class="col-12">
					<div class="heading primary-heading">
						<h3 class="title">Our crew</h3>
						<h5 class="subtitle"><span>Meet the</span> <span>Team</span></h5>
						<p>Streamer fish California halibut Pacific saury. Slickhead grunion lake trout. Canthigaster rostrata spikefish brown trout loach</p>
					</div>
				</div>
			</div>
		</div>
		<div class="container">
			<div class="row offset-margin">
			
				@foreach (Employee employee in Model.Employee)
				{
					<div class="col-lg-4 col-sm-6">
						<!-- item start-->
						<div class="team-item team-item--primary">
							<div class="img-holder">
								<img class="img-bg" src="~/img/@employee.Image" alt="img" />
								<!-- socials start-->
								@* <nav class="socials-holder">
							<ul class="socials-primary">
							<li><a href="#"><i class="fa fa-facebook" aria-hidden="true"></i></a></li>
							<li><a href="#"><i class="fa fa-twitter" aria-hidden="true"></i></a></li>
							<li><a href="#"><i class="fa fa-youtube-play" aria-hidden="true"></i></a></li>
							<li><a href="#"><i class="fa fa-instagram" aria-hidden="true"></i></a></li>
							</ul>
							</nav> *@
								<!-- socials end -->
								<div class="description"><span class="name">@employee.FullName</span><span class="position">@employee.Position.Name</span></div>
							</div>
						</div>
						<!-- item end-->
					</div>
				}
			</div>
		</div>
	</section>
	<!-- team end-->
</main>