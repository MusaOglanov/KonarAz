@model List<Product>
@foreach (Product product in Model)
{
    var firstImage = product.ProductImages?.FirstOrDefault()?.Image ?? "default.jpg"; // Əgər şəkil yoxdursa, default göstər

    <li style="display:flex; align-items:center; margin-bottom:10px; ">
        <img src="~/img/@firstImage" style="width:60px; height:60px; object-fit:cover; margin-right:10px; " />
        <a asp-action="Detail" asp-route-id="@product.Id" style="color:black; text-decoration:none;">@product.Name</a>

    </li>
}
