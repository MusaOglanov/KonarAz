@model Konar.az.ViewModels.ResetPasswordVM
@{
    Layout = null;
}
<link href="~/css/styles.min.css" rel="stylesheet" />
<div class="container">
    <br />
    <h2>Şifrə yeniləmə səhifəsi</h2>
    <form  method="post">
        <label>Şifrəni daxil edin </label>
        <input type="text" class="form-control" asp-for="Password" />
        <span asp-validation-for="Password" class="text-danger"></span>
        <br />
        <label>Şifrəni yenidən daxil edin </label>
        <input type="text" class="form-control" asp-for="ConfirmPassword" />
        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
        <br />
        <button class="btn btn-primary">Şifrəni yenilə</button>
    </form>
</div>


