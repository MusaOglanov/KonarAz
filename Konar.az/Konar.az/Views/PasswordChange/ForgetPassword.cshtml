@model Konar.az.ViewModels.ForgetPasswordVM
@{
    Layout = null;
}
<link href="~/css/styles.min.css" rel="stylesheet" />
<div class="container">
    <br />
    <h2>Şifrə yeniləmə səhifəsi</h2>
    <form asp-action="ForgetPassword" asp-controller="PasswordChange" method="post">
        <label>Mail Adresini Daxil </label>
        <input type="text" class="form-control" asp-for="Mail"   />
        <span asp-validation-for="Mail" class="text-danger"></span>
        <br />
        <button class="btn btn-primary">Şifrə yeniləmə Linki göndər</button>
    </form>
</div>


