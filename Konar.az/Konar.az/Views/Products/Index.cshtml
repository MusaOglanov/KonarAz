@model List<Product>

<main class="main">
	<section class="promo-primary promo-primary--shop">
		<div class="overlay"></div>
		<picture>
			<source srcset="~/img/catalog-bg.jpg" media="(min-width: 992px)" /><img class="jarallax-img img-bg" src="~/img/catalog-bg.jpg" alt="img" />
		</picture>
		<div class="container">
			<div class="row">
				<div class="col-12">
					<div class="align-container">
						<div class="align-item">
							<h1 class="title">Məhsullar</h1>
						</div>
					</div>
				</div>
			</div>
		</div>
	</section>
	<!-- catalog start-->
	<section class="section catalog no-padding-bottom">
		<div class="tabs-holder catalog-tabs">
			<div class="container">
				@foreach (Product item in Model)
				{
				<div class="row">
					<div class="col-xl-3 col-lg-4">
						<!-- catalog aside start-->
						<div class="aside-holder">
							<span class="close-aside d-lg-none">
								<svg class="icon">
									<use xlink:href="#close"></use>
								</svg>
							</span>
							<aside class="catalog-aside">
								<div class="catalog-aside__inner">
									<h4 class="title toggler">Kataloq</h4>
									<!-- tabs header start-->
									@foreach (ProductCategory prodCat in item.ProductCategories)
										{
											<div class="tabs-header toggle-item">
												<span >
													<span class="item">@prodCat.Category.Name</span>
												</span>
											</div>
										}
								
									<!-- tabs header end-->
								</div>
								<form class="form form--primary form--catalog" action="javascript:void(0);">
									
									<fieldset class="brands">
										<h4 class="title toggler">Brendlər</h4>
										<div class="brands-block toggle-item">
											<!-- item start-->
											
												<div class="tabs-header ">
													<span >
														<span class="item">@item.Brand.Name</span>
													</span>
												</div> 
									
											 <div class="brand-item">
												<label>
													<input class="checkbox checkbox--rounded" type="checkbox" name="brand" value="Solarius" /><span class="checkbox--rounded-mask"></span><span class="name">Solarius</span>
												</label><span class="count">25</span>
											</div> 
											<!-- item end-->
										 </div>
									</fieldset>
									<!-- brands end-->


									<div class="tags">
										<h4 class="title toggler">Taqlar</h4>
										<div class="tags-block toggle-item">
											@foreach (ProductTag prodTag in item.ProductTags)
												{
													<span class="tag">
														@prodTag.Tag.Name
														<span class="close">
															<svg class="icon">
																<use xlink:href="#close"></use>
															</svg>
														</span>
													</span>
												}
											
										</div>
									</div>
									<!-- button block start-->
									<!-- <fieldset class="button-block">
										<button class="button button--transparent" type="submit" data-hover="Filteri tətbiq et"><span>Filteri tətbiq et</span></button>
									</fieldset> -->
									<!-- button block end-->
								</form>
							</aside>
						</div>
					</div>
					<div class="col-xl-9 col-lg-8">
						<div class="row d-lg-none">
							<div class="col-12">
								<div class="filter-trigger">
									<svg class="icon">
										<use xlink:href="#controls"></use>
									</svg><span class="title">Filters</span>
								</div>
							</div>
						</div>
						<!-- tabs content start-->
						<div class="tabs-content">
							<!-- tabs content item start-->
							<div class="tabs-content__item"> 
								
								 <div class="row">
									<div class="col-12">
										<div class="pagination-holder">
											<!-- pagination start-->
											<ul class="pagination pagination--primary">
												<li class="back"><a href="#">Əvvələ</a></li>
												<li class="number current"><a href="#">1</a></li>
												<li class="number"><a href="#">2</a></li>
												<li class="number"><a href="#">3</a></li>
												<li class="number"><a href="#">4</a></li>
												<li class="number"><a href="#">5</a></li>
												<li class="next"><a href="#">İrəli</a></li>
											</ul>
											<!-- pagination end-->
										</div>
									</div>
								</div> 
						 	</div>
							<!-- tabs content item end-->
							<!-- tabs content item start-->
							<div class="tabs-content__item">
								<div class="row offset-margin">

									<div class="col-xl-4 col-lg-6 col-md-4 col-sm-6">
										<!-- item start-->
										<figure class="product-item product-item--primary">
												<a class="img-holder" asp-action="Detail" asp-route-id="@item.Id">
												<img src="~/img/@item.ProductImages.FirstOrDefault().Image" alt="product" /></a>

											<figcaption>
												<span class="price">$ @item.Price</span>
													<h4 class="title"><a asp-action="Detail" asp-route-id="@item.Id">@item.Name</a></h4>
											</figcaption>
										</figure>
										<!-- item end-->
									</div>
								</div>
							
							</div>
							<!-- tabs content item end-->
							<!-- tabs content end-->
						</div>
					</div>
					<!-- catalog aside end-->
				</div>
				}
				<div class="row">
					<div class="col-12">
						<div class="pagination-holder">
							<!-- pagination start-->
							<ul class="pagination pagination--primary">
								<li class="back"><a href="#">Əvvələ</a></li>
								<li class="number current"><a href="#">1</a></li>
								<li class="number"><a href="#">2</a></li>
								<li class="number"><a href="#">3</a></li>
								<li class="number"><a href="#">4</a></li>
								<li class="number"><a href="#">5</a></li>
								<li class="next"><a href="#">İrəli</a></li>
							</ul>
							<!-- pagination end-->
						</div>
					</div>
				</div>
			</div>
		</div>
	</section>
	<!-- catalog end-->
	<!-- relevant start-->
	<br>
</main>