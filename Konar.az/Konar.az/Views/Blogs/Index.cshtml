@model BlogVM
<main class="main">
    <!-- promo primary start-->
    <section class="promo-primary">
        <div class="overlay"></div>
        <picture>
            <source srcset="~/img/elements.jpg" media="(min-width: 992px)" /><img class="jarallax-img img-bg" src="~/img/elements.jpg" alt="img" />
        </picture>
        <div class="container">
            <div class="row">
                <div class="col-12">
                    <div class="align-container">
                        <div class="align-item">
