@model Faq

<div class="card">
    <div class="card-body">
        <h4 class="card-title">Sual yarat</h4>
        @*   <p class="card-description">
        Basic form elements
        </p> *@
        <form method="post" class="forms-sample" enctype="multipart/form-data">
            <div class="form-group">
                <label asp-for="Answer">Sual</label>
                <input asp-for="Answer" type="text" class="form-control" />
                <span class="text-danger" asp-validation-for="Answer"></span>
            </div>
             <div class="form-group">
                <label asp-for="Question">Cavab</label>
                <textarea asp-for="Question" type="text" class="form-control"></textarea>
                <span class="text-danger" asp-validation-for="Question"></span>
            </div>

            <button type="submit" class="btn btn-primary me-2">Send</button>
            <a asp-action="Index" class="btn btn-secondary text-white">Go Back</a>
        </form>
    </div>
</div>
